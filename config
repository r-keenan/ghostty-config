# styling
theme = CoolNight
font-size = 16
font-family = MesloLGS Nerd Font
background-blur-radius = 20
background-opacity = .70

# auto update settings
auto-update = download
auto-update-channel = stable

# custom keybindings
keybind = super+r=reload_config 
keybind = super+i=inspector:toggle
keybind = super+f=toggle_fullscreen
keybind = super+left=previous_tab
keybind = super+right=next_tab

# tmux-like prefix controlled keybindings
keybind = super+b>x=close_surface
keybind = super+b>c=new_tab 
keybind = super+b>n=new_window
keybind = super+b>f=toggle_fullscreen

# splits 
keybind = super+s>y=new_split:right
keybind = super+s>x=new_split:down
keybind = super+s>e=equalize_splits

# split navigation 
keybind = super+s>h=goto_split:left
keybind = super+s>j=goto_split:bottom
keybind = super+s>k=goto_split:top
keybind = super+s>l=goto_split:right
